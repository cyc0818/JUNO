<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xdd SYSTEM "xdd.dtd">

<xdd>
    <package name="ElecEvent">
        <import name="TObject"/> 

        <class name="SpmtElecSpecialWord"
            author="Pietro Chimenti"
            desc="SpmtElecSim information of Abc Card special word">

            <base name="TObject"/>

            <attribute
                desc="Channel Number within catiroc"
                name="ChNb"
                type="Char_t"
                />

            <attribute
                desc="Asic Number within board"
                name="AsicNb"
                type="Char_t"
                />

            <attribute
                desc="card number"
                name="CardNb"
                type="UChar_t"
                />

            <attribute
                desc="Trigger Rate"
                name="TriggerRate"
                type="UShort_t"
                />

        </class>
    </package>
</xdd>
